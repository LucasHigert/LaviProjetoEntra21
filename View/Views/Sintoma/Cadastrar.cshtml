
@{
    ViewBag.Title = "Cadastrar";
}

<form action="/sintoma/inserir" method="post">
    <div>
        <label for="campo-partecorpo">Partes do Corpo</label>
        <select name="idParteCorpo" id="campo-partecorpo" class="form-control">
            @foreach (Model.ParteCorpo partecorpo in ViewBag.PartesCorpo)
            {
                <option value="@partecorpo.Id">@partecorpo.Nome</option>
            }
        </select>
    </div>

    <div>
        <label for="campo-nome">Sintoma</label>
        <input type="text" name="nome" id="campo-nome" />
    </div>

    <div>
        <label for="campo-criolo">Tradução Criolo</label>
        <input type="text" name="traducaocriolo" id="campo-criolo" />
    </div>
    <div>
        <label for="campo-frances">Francês</label>
        <input type="text" name="traducaofrances" id="campo-frances" />
    </div>

    <button type="submit">Salvar</button>
</form>