
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterarando cargo '@ViewBag.Cargos.Nome'</h2>


<div class="row">
    <div class="col-12">
        <form action="/cargo/update" method="post">
            <div>
                <label class="font-weight-bold" for="campo-nivel">Nivel de Permissão <a class="text-danger">*</a></label>
                <select name="nivelpermissao" id="campo-nivel" class="form-control border-info"s>
                    @if (@ViewBag.Cargos.NivelPermissao == 1)
                    {
                        <option selected>Baixo</option>
                    }
                    else
                    {
                        <option value="1">Baixo</option>

                    }
                    @if (@ViewBag.Cargos.NivelPermissao == 2)
                    {
                    <option selected>Medio</option>
                    }
                    else {
                    <option value="2">Medio</option>
                    }
                    @if (@ViewBag.Cargos.NivelPermissao == 3)
                    {
                    <option selected>Alto</option>
                    }
                    else {
                    <option value="3">Alto</option>
                    }
                    @if (@ViewBag.Cargos.NivelPermissao == 4)
                    {
                    <option selected>Administrador</option>
                    }
                    else{
                    <option value="4">Administrador</option>
                    }
                </select>
            </div>
           
            <input type="hidden" name="id" id="id" value="@ViewBag.Cargos.Id" />
            <div class="form-group">
                <label class="font-weight-bold" for="cargo-nome">Cargo <a class="text-danger">*</a> </label>
                <input class="form-control border-info" id="cargo-nome" name="nome" maxlength="100" type="text" value="@ViewBag.Cargos.Nome" />
            </div>
           
            <button class="btn btn-success float-right" type="submit"><i class="fa fa-save"></i> Salvar</button>
        </form>
    </div>
</div>