
@{
    ViewBag.Title = "PostoEncaminhar";
}

<h2>Encaminhar para posto</h2>

<div class="row">
    <div class="col-5">
        <form action="/posto/encaminhar" method="post">
            <input type="hidden" name="id"
                   id="id"
                   value="@ViewBag.Venda.Id" />
            <div class="form-group">
                <label id="venda-cliente">Cliente</label>
                <select class="form-control"
                        id="venda-cliente"
                        name="idCliente">
                    <option value="@ViewBag.Venda.IdCliente"
                            selected="selected">
                        @ViewBag.Venda.Cliente.Nome
                        </option>

                    </select>
                </div>
                <div class="form-group">
                    <label for="venda-descricao">
                        Descrição
                    </label>
                    <textarea class="form-control"
                              id="venda-descricao"
                              name="descricao">@ViewBag.Venda.Descricao</textarea>
                </div>
                <button class="btn btn-primary float-right">
                    Salvar
                </button>

            </form>


        </div>

        <div class="col-7">
            <h5 class="text-primary">Lista de Produtos</h5>

            <button class="btn btn-primary float-right mb-2"
                    data-toggle="modal"
                    data-target="#venda-produto-modal">
                Adicionar Produto
            </button>

            <table class="table table-striped table-bordered table-hover" id="venda-produtos-index">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Quantidade</th>
                        <th>Preço</th>
                        <th>Ação</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @RenderPage("ProdutoModal.cshtml")

    @section js {
        <script src="~/Scripts/venda/venda-editar.js"></script>
    }
