
@{
    ViewBag.Title = "Escolha";
}

<h2>Escolha</h2>
<head>
    <link rel="stylesheet" href="~/Content/TesteEncaminhamento.css" />
</head>

<div class="row">

    <div class="card-deck">
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/CardsTelaInicial/postos.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Farmácia</h5>
                <p class="card-text">Aqui você irá encaminhar o paciente para uma farmácia, incluir medicamentos, e designar demais atividades.</p>
                <a href="/posto/cadastrar" style="margin:0 auto;" class="btn btn-primary mt-4 ">Encaminhar</a>
            </div>
        </div>
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/CardsTelaInicial/postos.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Policlínica</h5>
                <p class="card-text">Aqui você irá encaminhar para uma policlínica que contenha os recursos necessários para atende-lo.</p>
                <a href="/posto/cadastrar" class="btn btn-primary mt-4">Encaminhar</a>
            </div>
        </div>

        <!--Hospital-->
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/CardsTelaInicial/postos.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Hospital</h5>
                <p class="card-text">Aqui você irá encaminhar para um Hospital, e enviar uma breve descrição sobre a necessidade do paciente.</p>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalScrollable">
                    Encaminhar
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalScrollableTitle">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <!--TEXTO-->
                            <div class="modal-body">
                                AQUI VAI O TEXTO
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Imprimir</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="wrap">
        <h1>Bootstrap Modal Example</h1>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#MyModal">
            Large modal
        </button>
    </div>
    <div id="printThis">
        <div id="MyModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">

            <div class="modal-dialog modal-lg">

                <!-- Modal Content: begins -->
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="gridSystemModalLabel">Your Headings</h4>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body printSection">
                        <div class="body-message">
                            <h4>Any Heading</h4>
                            <p>And a paragraph with a full sentence or something else...</p>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                        <button id="btnPrint" type="button" class="btn btn-default">Print</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
@section js{
    <script src="~/Content/TesteEncaminhamento.js"></script>
}
