
@{
    ViewBag.Title = "Escolha";
}

<h2>Escolha</h2>
<head>
    <link rel="stylesheet" href="~/Content/TesteEncaminhamento.css" />
</head>

<div class="row">

    <div class="card-deck">
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/Encaminhamento/farmácia1.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Farmácia</h5>
                <p class="card-text">Aqui você irá encaminhar o paciente para uma farmácia, incluir medicamentos, e designar demais atividades.</p>
                <!-- Button trigger modal -->
                <button class="btn btn-info float-right mb-2"
                        data-toggle="modal"
                        data-target="#farmaciaModal">
                    Ecaminhar
                </button>
            </div>
        </div>
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/Encaminhamento/POSTO.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Policlínica</h5>
                <p class="card-text">Aqui você irá encaminhar para uma policlínica que contenha os recursos necessários para atende-lo.</p>
                <!-- Button trigger modal -->
                <button class="btn btn-info float-right mb-2"
                        data-toggle="modal"
                        data-target="#postoModal">
                    Encaminhar
                </button>
            </div>
        </div>

        <!--Hospital-->
        <div class="card" style="width: 30rem;height: 360px">
            <img src="~/Content/Imagens/CardsTelaInicial/posto.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Hospital</h5>
                <p class="card-text">Aqui você irá encaminhar para um Hospital, e enviar uma breve descrição sobre a necessidade do paciente.</p>

                <!-- Button trigger modal -->
                <button class="btn btn-info float-right mb-2"
                        data-toggle="modal"
                        data-target="#hospitalModal">
                    Encaminhar
                </button>
            </div>
        </div>
    </div>
</div>
@section js{
    <script src="~/Scripts/Encaminhamento/TraducaoJavaScript.js"></script>
    <script src="~/Content/TesteEncaminhamento.js"></script>
}


@RenderPage("PostoEncaminhar.cshtml")
@RenderPage("FarmaciaEncaminhar.cshtml")
@RenderPage("HospitalEncaminhar.cshtml")