
@{
    ViewBag.Title = "Cadastro";
}
<title>Cadastro de paciente</title>
<h2 class="h2 mt-5 mb-5">Cadastro de paciente</h2>

<form action="/paciente/inserir" method="post">
    <div class="row">
        <div class="col-6">
            <label class="font-weight-bold" for="campo-nome">Nome<a class="text-danger">*</a></label>
            <input type="text" id="campo-nome" name="nome" class="form-control border-info" maxlength="100" required="">
        </div>

        <div class="col-3">
            <label for="campo-sexo">Sexo<a class="text-danger">*</a></label>
            <select id="campo-sexo" name="sexo" class="form-control border-info">
                <option value="true">Feminino</option>
                <option value="false">Masculino</option>
            </select>
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-posto">Posto<a class="text-danger">*</a></label>
            <select name="idPosto" id="campo-posto" required="" class="form-control border-info">
                <option selected="" disabled="disabled">Selecione o posto onde está</option>
                @foreach (Model.Posto Posto in ViewBag.Postos)
                {
                    <option value="@Posto.Id">@Posto.Nome</option>

                }
            </select>
        </div>
    </div>

    <div class="row">

        <div class="col-4">
            <label class="font-weight-bold" for="campo-rne">RNE</label>
            <input type="text" id="campo-rne" name="rne" maxlength="50" class="form-control border-info" />
        </div>

        <div class="col-4">
            <label class="font-weight-bold" for="campo-cep">CEP</label>
            <input type="text" id="campo-cep" name="cep" maxlength="9" class="form-control border-info" />
        </div>


        <div class="col-4">
            <label class="font-weight-bold" for="campo-endereco">Endereço</label>
            <input type="text" id="campo-endereco" name="endereco" class="form-control border-info" maxlength="100" />
        </div>


    </div>
    <!------------------------------>
    <div class="row">


        <div class="col-3">
            <label class="font-weight-bold" for="campo-idade">Idade</label>
            <input type="number" id="campo-idade" name="idade" maxlength="3" class="form-control border-info" />
        </div>


        <div class="col-3">
            <label class="font-weight-bold" for="campo-telefone">Telefone</label>
            <input type="tel" id="campo-telefone" name="telefone" maxlength="14" class="form-control border-info" />
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-passaporte">Passaporte</label>
            <input type="text" id="campo-passaporte" name="passaporte" maxlength="50" class="form-control border-info" />
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-cpf">CPF</label>
            <input type="text" maxlength="15" id="campo-cpf" name="cpf" class="form-control border-info" />
        </div>

    </div>


    <!-- Campos com informações de identificação (cpf,telefone,rne,...)-->
    <div class="row">



        <div class="col-3">
            <label class="font-weight-bold" for="campo-pressao">Pressão</label>
            <input type="text" id="campo-pressao" name="pressao" class="form-control border-info" maxlength="100" />
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-peso">Peso</label>
            <input type="text" id="campo-peso" name="peso" class="form-control border-info" />
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-altura">Altura</label>
            <input type="text" id="campo-altura" name="altura" class="form-control border-info" />
        </div>

        <div class="col-3">
            <label class="font-weight-bold" for="campo-altura">Temperatura</label>
            <input type="text" id="campo-altura" name="temperatura" class="form-control border-info" />
        </div>

    </div>
    <button type="submit" class="btn btn-success mt-15"><i class="fa fa-save"></i> Salvar</button>
</form>


