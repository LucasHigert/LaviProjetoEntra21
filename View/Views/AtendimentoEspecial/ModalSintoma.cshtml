<div id="modal-sintoma" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Titulo da modal-->
            <div class="modal-header">

                <h2>@View.Resources.Resource.Sintoma</h2>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input type="text" hidden="hidden" name="id" />
                <div class="form-group">
                    <select name="idSintoma" id="sintoma">
                        <option disabled="disabled" selected="selected">@View.Resources.Resource.SelecioneSintoma</option> 
                    </select>
              
                </div>

                <div>
                    <label>Nivel de Dor</label>
                    <select required="" name="nivelDor">
                        <option selected="selected" disabled="disabled">Selecione um nivel de dor</option>
                        <option value="1">Baixo/Pouco</option>
                        <option value="2">Medio/Suportavel</option>
                        <option value="3">Alto/Forte</option>
                    </select>
                </div>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@View.Resources.Resource.Cancelar</button>
                <button type="button" class="btn btn-primary" id="botao-salvar">@View.Resources.Resource.Proximo</button>
            </div>

        </div>
    </div>

</div>
<script src="~/Scripts/select2.min.js"></script>
