<div id="modal-paciente" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <!--Titulo da modal-->
            <div class="modal-header mt-0">
                <h2>Pacientes</h2>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <h4>Lista de paciente</h4>
                        <label class="font-weight-bold" for="campo-pesquisa">Pesquisar Nome</label>
                        <input id="campo-pesquisa" name="nome" class="form-control border-info" type="text" />
                        <div class="form-group mt-5">

                            <table id="tabela" class="table table-striped">
                                <thead class="bg-dark" bg-dark text-white">
                                    <tr>
                                        <td>Nome</td>
                                        <td>Ação</td>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                    <div class="col-6">
                        <h4>Cadastro de paciente</h4>
                        <div class="form-group">

                            <label class="font-weight-bold" for="campo-nome">Nome</label>
                            <input class="form-control border-info" type="text" id="campo-nome" />
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="campo-sexo">Sexo</label>
                            <select class="form-control border-info" id="campo-sexo">
                                <option selected="selected" disabled="disabled">Selecione um sexo</option>
                                <option value="1">Feminino</option>
                                <option value="0">Masculino</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold" for="campo-idade">Idade</label>
                            <input class="form-control border-info" type="number" id="campo-idade" />
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a id="botao-salvar" class="btn btn-success text-white mt-3 float-right">
                                    <i class="fa fa-save"></i> Salvar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary float-left" data-dismiss="modal">
                    <i class="fa fa-close"></i> Fechar
                </button>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Atendimento/atendimento-paciente.js"></script>