
@{
    ViewBag.Title = "Cadastrar";
}
<h2 class="display-4">Cadastro de Partes do Corpo</h2>
<form action="/partecorpo/inserir" method="post">
        <div>
            <label class="text-dark mt-10" for="campo-nome">Nome</label>
            <input type="text" name="nome" id="campo-nome" class="form-control border-info text-dark font-weight-bold"  />
        </div>

        <div>
            <label class="text-dark mt-20" for="campo-criolo">Tradução Criolo</label>
            <input type="text" name="traducaocriolo" id="campo-criolo"class="form-control border-info text-dark font-weight-bold" />
        </div>
        <div>
            <label class="text-dark mt-20" for="campo-frances">Francês</label>
            <input type="text" name="traducaofrances" id="campo-frances" class="form-control border-info text-dark font-weight-bold" />
        </div>

    <button class="btn btn-success mt-25" type="submit"><i class="fa fa-save"></i> Salvar</button>
</form>