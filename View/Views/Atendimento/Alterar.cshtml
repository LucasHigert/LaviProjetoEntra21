
@{
    ViewBag.Title = "Index";
}
<h2 class="h2 mt-5 mb-5">Atendimento N°  @ViewBag.Atendimento.Id</h2>
<form action="/atendimento/update" method="post">
    <!--Esta div contera o atendente e o medico, quando o atendente abrir nao tera a opção medico-->
    <!--Quando o medico abrir nao tera o atendente-->
    <input type="text" name="id" value="@ViewBag.Atendimento.Id" hidden="hidden" />
    <div class="row">
        <div class="col-12">
            <label class="font-weight-bold" for="campo-paciente">Paciente</label>
            <select name="idPaciente" id="campo-paciente" disabled class="form-control border-info">
                <option selected="selected" disabled="disabled" value="@ViewBag.Paciente.Id">@ViewBag.Paciente.Nome</option>
            </select>

        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label class="font-weight-bold" for="campo-data">Data</label>
            <input type="text" value="@ViewBag.Atendimento.DataAtendimento" disabled name="DataAtendimento" id="campo-data" class="form-control border-info" />
        </div>
        <div class="col-6">
            <div>
                <label class="font-weight-bold" for="campo-prioridade">Prioridade<i class="text-danger">*</i></label>
                <select name="Prioridade" id="campo-prioridade" class="form-control border-info">
                    @if (ViewBag.Atendimento.Prioridade == 3)
                    {
                        <option value="3" selected="selected">Alto</option>
                        <option value="2">Medio</option>
                        <option value="1">Baixo</option>
                    }
                    else if (ViewBag.Atendimento.Prioridade == 2)
                    {
                        <option value="3">Alto</option>
                        <option value="2" selected="selected">Medio</option>
                        <option value="1">Baixo</option>
                    }
                    else
                    {
                        <option value="3" selected="selected">Alto</option>
                        <option value="2">Medio</option>
                        <option value="1" selected="selected">Baixo</option>
                    }
                </select>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <label class="font-weight-bold" for="campo-observacao">Observação</label>
            <textarea class="form-control border-info" id="campo-observacao" name="observacao" maxlength="150"></textarea>
        </div>
    </div>

    @if ((Session["usuarioLogadoPermissao"].ToString() == "3") || (Session["usuarioLogadoPermissao"].ToString() == "4"))
    {
        if (ViewBag.Paciente.Lingua != 1)
        {

            <div class="row">
                <div class="col-12">

                    <h3>Lista de Sintomas</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-9">
                    <table class="table table-primary table-hover table-bordered text-dark mt-0">
                        <thead class="bg-dark">
                            <tr>
                                <td>Sintoma</td>
                                <td>Nivel de Dor</td>
                            </tr>
                        </thead>
                        <tbody></tbody>

                        @for (int i = 0; i < ViewBag.Sintomas.Count; i++)
                        {
                            if (ViewBag.NivelDor[i].NiverDor == 2)
                            {
                                <tr>
                                    <td>@ViewBag.Sintomas[i].Nome</td>
                                    <td>Médio</td>
                                </tr>
                            }
                            else if (ViewBag.NivelDor[i].NiverDor == 3)
                            {
                                <tr>
                                    <td>@ViewBag.Sintomas[i].Nome</td>
                                    <td>Alto</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td>@ViewBag.Sintomas[i].Nome</td>
                                    <td>Baixo</td>
                                </tr>
                            }
                        }
                    </table>
                </div>
                <div class="col-3">
                    <div>
                        <a class="btn btn-primary pull-right" href="/atendimentoespecial/partecorpoespecial?idAtendimento=@ViewBag.Atendimento.Id"><i class="fa fa-plus"></i> Adicionar Sintomas</a>
                    </div>
                </div>
            </div>

        }

        <div class="row">
            <div class="col-12">
                <label class="font-weight-bold" for="campo-tratamento">Tratamento</label>
                <textarea class="form-control border-info" id="campo-tratamento" name="tratamento" maxlength="100"></textarea>
            </div>
        </div>

    }





    <button class="btn btn-success mt-5 float-right" type="submit"><i class="fa fa-save"></i> Salvar</button>

</form>


