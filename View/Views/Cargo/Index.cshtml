
@{
    ViewBag.Title = "Index";
}

<h2>Cargos</h2>

<a class="btn btn-primary float-right" href="funcionario/index">Funcionários</a>
<table class="table table-striped table-bordered table-hover" id="cargos-index">
    <thead>
        <tr>
            <th>Cargos</th>           
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Cargo cargo in ViewBag.Cargos)
        {
            <tr>
                <td>@cargo.Nome</td>                
            </tr>
        }
    </tbody>
</table>