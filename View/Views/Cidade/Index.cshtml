
@{
    ViewBag.Title = "Index";
}

<h2>Cidades</h2>

<a class="btn btn-primary mb-3"
   href="/venda/cadastro">Nova Cidade</a>

<table class="table table-striped table-bordered
       table-hover" id="cidades-index">
    <thead>
        <tr>
            <th>Cidade</th>
            <th>Estado</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.Cidade cidade in ViewBag.Cidades)
        {
            <tr>
                <td>@cidade.Nome</td>
                <td>@cidade.Estado.Nome</td>
                <td>
                    <a class="btn btn-outline-info" href="/cidade/alterar?id=@cidade.Id"><i class="fa fa-edit"></i> Alterar</a>
                    <a class="btn btn-outline-danger" href="/cidade/apagar?id=@cidade.Id"><i class="fa fa-trash"></i> Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>